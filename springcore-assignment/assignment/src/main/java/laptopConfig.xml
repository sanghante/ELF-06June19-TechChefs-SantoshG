<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:component-scan base-package="com.techchefs.assignment" />

	<bean id="hp" class="com.techchefs.assignment.beans.HP">
		<property name="brand" value="HP"></property>
		<property name="os" value="Windows 10 pro"></property>
		<property name="ram" value="8"></property>
		<property name="color" value="Silver"></property>
		<property name="weight" value="2.1"></property>
		<property name="cost" value="59999.99"></property>		
	</bean>

	<bean id="dell" class="com.techchefs.assignment.beans.HP">
		<property name="brand" value="DELL"></property>
		<property name="os" value="Windows 10 home"></property>
		<property name="ram" value="8"></property>
		<property name="color" value="Black"></property>
		<property name="weight" value="1.6"></property>
		<property name="cost" value="49399.49"></property>		
	</bean>


</beans>
        
        


